if has('autocmd')
  filetype plugin indent on
endif

if has('syntax') && !exists('g:syntax_on')
  syntax enable
endif

" general
:set autoread
:set nu
:set ruler
:set t_Co=256
:set background=dark
:set paste
:set cursorline
:set mouse=r
:set statusline+=%F
:set ttyfast
:set lazyredraw

" indentation
:set autoindent
:set smartindent
:set smarttab
:set shiftwidth=2
:set softtabstop=2
:set tabstop=2
:set expandtab

" search
:set incsearch
:set ignorecase
:set smartcase

" pathogen
execute pathogen#infect()

" colorscheme
colorscheme tir_black

" vim-airline
let g:airline_theme='luna'
